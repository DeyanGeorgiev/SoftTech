<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" method="POST" >
            <fieldset>
                <legend>User details</legend>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="postTitle">User name</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" placeholder="{{user.fullName}}" required disabled="disabled" >
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="postContent">E-mail</label>
                    <div class="col-sm-4 ">
                        <input type="email" class="form-control" placeholder="{{user.email}} "  required disabled="disabled" >
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">

                        <a class="btn btn-default" href="/">Cancel</a>

                        <button type="submit" class="btn btn-danger">Delete account</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>