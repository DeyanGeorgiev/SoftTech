<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" method="POST" >
            <fieldset>
                <legend>Edit post</legend>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="postTitle">Post Title</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="postTitle" placeholder="post Title" name="title" required value="{{title}}" >
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="postContent">Content</label>
                    <div class="col-sm-6">
                        <textarea class="form-control" id="postContent" rows="5" name="content" required >{{content}}</textarea>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">

                        <button type="reset" class="btn btn-default">Cancel</button>

                        <button type="submit" class="btn btn-success">Edit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>